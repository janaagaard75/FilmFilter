{
  "compilerOptions": {
    "alwaysStrict": true,
    "lib": [
      "es2015",
      "es2016.array.include"
    ],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2015"
  },
  "files": [
    "src/main.ts"
  ]
}