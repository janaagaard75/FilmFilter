{
  "name": "film-filter-data",
  "version": "0.0.0",
  "description": "Data services for Film Filter.",
  "main": "dist/main.js",
  "repository": "https://github.com/janaagaard75/film-filter.git",
  "author": {
    "name": "Jan Aagaard",
    "email": "jan@aagaard.net"
  },
  "license": "ISC",
  "scripts": {
    "build-and-start-server": "yarn build && node dist/main.js",
    "build": "rimraf dist && tsc",
    "deploy": "echo Run yarn build and then git subtree push --prefix data heroku master from the parent folder.",
    "lint": "tslint src/**/*.ts",
    "start-client": "rimraf output && mkdirp output && wget http://localhost:5000/ --destination output/data.json && json-pretty-print output/data.json output/data-prettified.json",
    "start-server": "ts-node src/main.ts"
  },
  "dependencies": {
    "cors": "2.8.1",
    "express": "4.15.2",
    "node-fetch": "1.6.3",
    "ts-node": "3.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.1",
    "@types/express": "4.0.35",
    "@types/node-fetch": "1.6.7",
    "json-pretty-print": "0.0.4",
    "mkdirp": "0.5.1",
    "node-wget": "0.4.2",
    "rimraf": "2.6.1",
    "tslint": "4.5.1",
    "tslint-eslint-rules": "3.5.1",
    "tslint-react": "^2.5.0",
    "typescript": "2.2.1"
  }
}
